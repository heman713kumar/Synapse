{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", // Changed from commonjs
    // "moduleResolution": "NodeNext", // Added
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}